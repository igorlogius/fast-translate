{
  "author": "igorlogius",
  "homepage_url": "https://github.com/igorlogius/fast-translate",
  "description": "Translation addon that requires minimal permisisons that allows translation of selected text",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_area": "navbar",
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_browser_action": {}
  },

  "icons": {
    "64": "icon.png"
  },
  "manifest_version": 2,
  "name": "Fast Translate",
  "permissions": ["activeTab", "menus", "storage"],
  "version": "2.0.3"
}
